\DeclareLanguageMapping{english}{american-apa}

% Load the bibliography resource file
\addbibresource{BibThesis.bib}

% Define custom bibliography heading
\defbibheading{mybibheading}[\bibname]{%
  \centering
  \fontsize{14pt}{16.8pt}\selectfont % 14pt font size with 1.2 line spacing
  \textbf{#1} % Bold the heading title (#1 is \bibname, which is "References")
  \par % Ensure a new paragraph after the heading
  \vspace{\bibitemsep} % Add vertical space after the heading (optional)
}

% The following set the bibliography to single-spaced with one line gap between entries:
\renewcommand{\bibfont}{\normalfont\fontsize{11pt}{11pt}\selectfont} % Set bibliography font to 11pt
\setlength\bibitemsep{1\baselineskip} % Adds space between each reference
\setlength\bibhang{1.5em} % Adjusts indentation for APA format

% Define a command to print bibliography
\newcommand{\bibliographyAPA}{%
    \clearpage
    \begin{singlespace} % Single-spaced bibliography
        \setstretch{1} % Ensures single spacing
        \smallskip
        \printbibliography[heading=mybibheading, title=BIBLIOGRAPHY] % Print bibliography
    \end{singlespace}
    \addcontentsline{toc}{chapter}{BIBLIOGRAPHY} % Add to Table of Contents
}

